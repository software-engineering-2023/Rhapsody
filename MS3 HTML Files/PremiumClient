        function requestSupport() {
            // Open a new window
            var supportRequestWindowWindow = window.open('', '_blank');
            
            // Set background and text styles for the new window
            supportRequestWindowWindow.document.body.style.backgroundColor = '#000000';
            supportRequestWindowWindow.document.body.style.color = '#00FF00'; /* Light green */
            
            supportRequestWindowWindow.document.write('<input type="text" placeholder="Enter your issue that you would like help with here"/>');
            supportRequestWindowWindow.document.close();
        }

